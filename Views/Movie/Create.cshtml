@model TP3.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <title>Add Movie</title>
</head>
<body>

    <div class="container mt-5">

        <h1 class="mb-4">Add Movie</h1>

        <form method="post" asp-action="CreateMovie" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" required />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="GenreId" class="control-label">Membership Name</label>
                <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.member, "Value", "Text"))"></select>
                <span asp-validation-for="GenreId" class="text-red"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Upload Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Add Movie</button>
        </form>

        <a href="#" class="btn btn-secondary mt-3" onclick="history.go(-1);">Cancel</a>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
